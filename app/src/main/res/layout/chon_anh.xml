<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="5dp"
        android:background="#636563"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/custom_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#03A9F4"
                android:id="@+id/textViewChonAnh"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="50dp"
                android:text="Chụp ảnh"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:background="#7CDFDCDC"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:textColor="#03A9F4"
                android:gravity="center"
                android:id="@+id/textViewChupAnh"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Chọn ảnh thư viện"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewChonAnh" />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/custom_background"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#03A9F4"
                android:gravity="center"
                android:id="@+id/textViewHUY"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Hủy"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewChupAnh" />
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>